@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ChannelIndex</title>
    <link href="@Url.Content("~/Content/themes/gray/easyui.css")" rel="Stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/icon.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Common.css")" rel="Stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Channel/Index.css")" rel="Stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/sea.js")" type="text/javascript"></script>
    <script type="text/javascript">

        seajs.config({
            'map': [[/^(.*\.(?:css|js))(.*)$/i, '$1?20140611']]
        });

        seajs.use("Channel/Index", function (a) {

        });
    </script>
</head>
<body>
    <div id="background" class="background" style="height: 100%">
    </div>
    <div id="progressBar" class="progressBar">
        Loading,please wait...
    </div>
    <div>
        <div id="SearchContent" class="mainarea" style="width: 99%;">
            <h1 class="h1_SearchTitle">Channel Search</h1>
            <div class="filterhead"><a href="#">Filter</a></div>
            <table class="filterbg" border="0" style="width: 100%">
                <caption>
                    <div id="descDiv">
                    </div>
                </caption>
                <tr>
                    <td align="right">Channel Name:
                    </td>
                    <td>
                        <input type="text" class="keywordbg" id="shChannelName" />
                    </td>
                    <td align="right">Short Name:
                    </td>
                    <td>
                        <input type="text" class="keywordbg" id="shShortName" /></td>
                </tr>
                <tr>
                    <td align="right">API:</td>
                    <td>
                        <select id="shAPI" class="easyui-combobox" style="width: 220px; height: 30px;">
                            <option value="2">All</option>
                            <option value="1">Yes</option>
                            <option value="0">No</option>
                        </select>
                    </td>
                    <td align="right">Export2CSV:</td>
                    <td>
                        <select id="shExport2CSV" class="easyui-combobox" style="width: 220px; height: 30px;">
                            <option value="2">All</option>
                            <option value="1">Yes</option>
                            <option value="0">No</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td colspan="4" style="text-align: center; height: 30px;">
                        <div class="filtyerbtnarea">
                            @* <a href="#" class="easyui-linkbutton" iconcls="icon-search" id="btnSearching">Search</a> 
                            <a href="#" class="easyui-linkbutton" iconcls="icon-search" id="btnReset">Reset</a>*@
                            <input type="image" class="btnSearch" id="btnSearching" src="~/Content/images/searchbtn.png">
                            <input type="image" class="btnReset" id="btnReset" src="~/Content/images/btnReset.png">
                        </div>
                    </td>
                </tr>
            </table>
            <br />
            <div>
                <table id="channelManageDG"></table>
            </div>
            <div>
                <form id="channelInfoDigForm" style="min-height: 200px; display: none">
                    <table id="channelInfoTable" border="1" style="height: 100%; width: 100%; display: none; border-collapse: collapse">
                        <tbody>
                            <tr>
                                <td>
                                    <div>ChannelName</div>
                                </td>
                                <td>
                                    <div>
                                        <input id="channelName" type="text" class="easyui-validatebox" data-options="required:true,validType:'length[1,100]'" />
                                    </div>
                                </td>

                                <td>
                                    <div>ShortName</div>
                                </td>
                                <td>
                                    <div>
                                        <input id="shortName" type="text" class="easyui-validatebox" data-options="required:true,validType:'length[1,100]'" />
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <div>API</div>
                                </td>
                                <td>
                                    <div>
                                        <select id="API">
                                            <option value="1">Yes</option>
                                            <option value="0">No</option>
                                        </select>
                                    </div>
                                </td>
                                <td>
                                    <div>Export2CSV</div>
                                </td>
                                <td>
                                    <div>
                                        <select id="Export2CSV">
                                            <option value="1">Yes</option>
                                            <option value="0">No</option>
                                        </select>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
