@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Noble House CMS Login</title>
    <link href="@Url.Content("~/Content/themes/Gray/easyui.css")" rel="Stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/icon.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Common.css")" rel="Stylesheet" type="text/css" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/LoginPage/css/style.css")"/>
    <!--[if lte IE 7]><style>.main{display:none;} .support-note .note-ie{display:block;}</style>
		<![endif]-->
    <!--[if lte IE 7]><style>.main{display:none;} .support-note .note-ie{display:block;}</style>
		<![endif]-->

    <style>
        body
        {
            background: #7f9b4e url("@Url.Content("~/Content/images/bg2.jpg")") no-repeat center top;
            -webkit-background-size: cover;
            -moz-background-size: cover;
            background-size: cover;
        }

        .container > header h1,
        .container > header h2
        {
            color: #fff;
            text-shadow: 0 1px 1px rgba(0,0,0,0.7);
        }
    </style>

    <script src="@Url.Content("~/Scripts/sea.js")" type="text/javascript"></script>
    <script type="text/javascript">


        seajs.config({
            'map': [[/^(.*\.(?:css|js))(.*)$/i, '$1?20140611']]
        });

        seajs.use("Login/Index", function (a) {

        });
    </script>

</head>
<body>
     <div id="DivLocker">
    </div>
    <div id="background" class="background" style="display: none;">
    </div>
    <div id="progressBar" class="progressBar" style="display: none;">
        Loading,please wait...
    </div>
    <div class="container">

        <header>

            <h1>NOBLEHOUSE</h1>
            <h2>CMSystem</h2>


            <div class="support-note">
                <span class="note-ie">Sorry, only modern browsers.</span>
            </div>

        </header>

        <section class="main">
            <form id="CMSLoginForm" class="form-4">
                <h1>Login </h1>
                <p>
                    <label for="login">Username or email</label>
                    <input type="text" id="UserID" name="login" placeholder="User Account" class="easyui-validatebox"  required="required" style="display:none">
                </p>
                <p>
                    <label for="password">Password</label>
                    <input type="password" id="UserPWD" name='password' placeholder="Password" class="easyui-validatebox"  required="required" style="display:none">
                </p>

                <p>
                    <input type="submit" id="submit" name="submit" value="Continue" disabled="disabled" >
                </p>
            </form>
        </section>

    </div>
</body>
</html>
