@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ProductSearch</title>
    <link href="@Url.Content("~/Content/themes/base/jquery-ui.css")" rel="Stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/gray/easyui.css")" rel="Stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/icon.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Common.css")" rel="Stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/ProductSearch/ProductSearch.css?20140611")" rel="Stylesheet" type="text/css" />

    <script src="@Url.Content("~/Scripts/sea.js")" type="text/javascript"></script>
    <script type="text/javascript">

        seajs.config({
            'map': [[/^(.*\.(?:css|js))(.*)$/i, '$1?20140611']]
        });
        seajs.use("ProductSearch/ProductSearch", function (a) {

        });
    </script>
</head>
<body>
    <div>

        <div id="background" class="background" style="height: 100%">
        </div>
        <div id="progressBar" class="progressBar">
            Loading,please wait...
        </div>

        <aside id="mainarea">
            @Html.Partial("_SearchCondition");

            @Html.Partial("_SearchResult");

        </aside>
    </div>
    <input type="hidden" id="hiddenTotal" />
    <input type="hidden" id="hiddenReqFrom" value="@ViewBag.reqFrom" /><!--标识来自哪个页面的请求（菜单点击还是Dashboar页面)-->
    <input type="hidden" id="reqStatus" value="@ViewBag.reqStatus" />
</body>
</html>
