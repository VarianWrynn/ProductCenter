@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>RolesManagement</title>
    <link href="@Url.Content("~/Content/themes/gray/easyui.css")" rel="Stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/icon.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Common.css")" rel="Stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Roles/RolesManagement.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/sea.js")" type="text/javascript"></script>
    <script type="text/javascript">

        seajs.config({
            'map': [[/^(.*\.(?:css|js))(.*)$/i, '$1?20140611']]
        });

        seajs.use("Roles/RolesManagement", function (a) {

        });
    </script>
</head>
<body>
    <div id="background" class="background" style="height: 100%">
    </div>
    <div id="progressBar" class="progressBar">
        Loading,please wait...
    </div>

    <div>
        <div>
            <table id="roleManageDG"></table>
        </div>
        <div>
            <div id="dlgRoleManage" style="padding: 10px 20px; display: none;">
                <div class="ftitle"><span id="actionSpan">Add New Role</span></div>
                <hr />
                <form id="roleManageForm" method="post">
                    <div class="fitem">
                        <label style="width: 40%; display: inline-block;">Role Name:</label>

                        <input id="Role_Name" class="easyui-validatebox" required="true" />
                    </div>
                    <div class="fitem">
                        <label style="width: 40%; display: inline-block;">Role Description:</label>
                        <input id="Role_Desc" class="easyui-validatebox" />
                    </div>
                </form>
            </div>
        </div>
        <div>
            <div id="dlgMenuSetting" style="display: none;">
                <div>
                    <table id="menuSettingDG"></table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
