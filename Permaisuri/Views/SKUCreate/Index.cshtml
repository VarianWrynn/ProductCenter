@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index New SKU Product</title>
    <link href="@Url.Content("~/Content/themes/base/jquery-ui.css")" rel="Stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/gray/easyui.css")" rel="Stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/icon.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Common.css")" rel="Stylesheet" type="text/css" />
    <link href="@Url.Content("~/Scripts/FancyBox/jquery.fancybox.css")" rel="Stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/SKUCreate/Index.css")" rel="Stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/sea.js")" type="text/javascript"></script>

    <script type="text/javascript">

        seajs.config({
            'map': [[/^(.*\.(?:css|js))(.*)$/i, '$1?20140611']]
        });

        seajs.use("SKUCreate/Index", function (a) {

        });
    </script>

</head>
<body>
    <div id="background" class="background" style="height: 300%">
    </div>
    <div id="progressBar" class="progressBar">
        Loading,please wait...
    </div>
    <div>
        <aside id="mainarea">
            <div class="breadcam">
                <ul>
                    <li><span class="whitearrow">New Configuration </span></li>
                </ul>
            </div>
            <h2>Add New Product </h2>

            <div class="fr">
            </div>
            <div class="prodetailsbg">
                <form id="NewSKUBaseForm">
                    <div>

                        <p><strong>Choose a  HM# </strong></p>

                        <div class="addHMArea">
                            <table width="100%" border="0" cellspacing="0">
                                <thead>
                                    <tr>
                                        <td>Image</td>
                                        <td>QTY</td>
                                        <td>MP</td>
                                        <td>HM#</td>
                                        <td>ProductName</td>
                                        <td>Inventory</td>
                                        <td></td>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr cpid="0">
                                        <td>
                                            <div id="WEBPOImgDIV">
                                                <a class="fancybox">
                                                    <img style="width: 60px;"></a>
                                            </div>
                                        </td>
                                        <td>
                                            <input type="text" name="comboQTY" id="comboQTY" class="comboQTY" style="width: 120px; height: 28px;">
                                        </td>
                                        <td>
                                            <input type="text" name="MasterPack" id="MasterPack" style="width: 70px; height: 28px;" value="N/A"  readonly="readonly">
                                        </td>
                                        <td>
                                            <input type="text" name="autoHMNUM" id="autoHMNUM" data-options="required:true" placeholder="select a HMNUM" class="easyui-validatebox" style="width: 180px; height: 28px;" value="">
                                            <input type="hidden" value="0" id="ProductID" />
                                        </td>
                                        <td>
                                            <input type="text" name="autoProductName" id="autoProductName" data-options="required:true" class="easyui-validatebox"  readonly="readonly" style="width: 260px; height: 28px;" value="">
                                        </td>
                                        <td>
                                            <input type="text" name="Inventory" id="Inventory" style="width: 50px; height: 28px;" disabled="disabled" value="0">
                                        </td>
                                        <td></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                     <p><strong> SKU Information </strong></p>
                    <table width="100%" border="0" cellspacing="5">
                        <tbody>
                            <tr>
                                <td width="35%" align="left">Product Name</td>
                                <td width="15%" align="left">SKU</td>
                                <td width="20%" align="left">UPC</td>
                                <td width="30%" align="left">Status  <strong></strong></td>
                            </tr>
                            <tr>
                                <td align="left">
                                    <input type="text" value="" id="ProductName" class="productname"
                                        data-options="required:true,validType:'length[3,200]'"></td>
                                <td align="left">
                                    <input type="text" value="" id="SKU" class="skuname"
                                        data-options="required:true,
                                                      validType:['length[3,100]']">
                                </td>
                                <td align="left">
                                    <input type="text" value="" id="UPC" class="easyui-validatebox upcname" data-options="validType:'length[0,50]'"></td>
                                <td>
                                    <select id="opStatus" style="width: 260px; height: 30px;">
                                        <option value="1">Status: New</option>
                                    </select>

                                </td>
                            </tr>
                            <tr>
                                <td colspan="1" align="left">Channel</td>
                                <td colspan="2" align="left">Brand</td>
                                <td colspan="1" align="left">ShipVia</td>
                            </tr>
                            <tr>
                                <td colspan="1" align="left">
                                    <input id="cbChannel" name="cbChannel" value="" style="width: 350px; height: 30px;" data-options="
                                           required: true,
                                           url: '../Common/GetChannelList?isNeedAll=false',
                                            valueField: 'ChannelID',
                                            textField: 'ChannelName'
                                ">
                                </td>
                                <td colspan="2" align="left" id="tdBrand">
                                    <input id="cbBrand" name="cbBrand" value="" style="width: 95%; height: 30px;" data-options="
                                           required: true,
                                            url: '../CMSCacheableData/BrandList?isNeedAll=false',
                                            valueField: 'Brand_Id',
                                            textField: 'Brand_Name',
                                            filter: function (q, row) {
                                                var opts = $(this).combobox('options');
                                                return row[opts.textField].toUpperCase().indexOf(q.toUpperCase()) == 0;
                                            }   
                                         " />

                                </td>
                                <td colspan="1" align="left" id="tdShipViaType">
                                    <input type="text" value="" class="easyui-combobox" id="ShipViaType" name="ShipViaType" style="min-width: 200px; height: 30px;"
                                        data-options="
                                            required:'required',
                                            valueField:'ShipViaTypeID',
                                            textField:'ShipViaTypeName',
                                            url:'../CMSCacheableData/ShipViaTypeList?isNeedAll=false'
                                        " />
                                </td>
                            </tr>
                            <tr>
                                <td width="35%" align="left" id="tooltipMaterial">Material</td>
                                <td width="15%" align="left" id="tooltipColour">Colour</td>
                                <td width="20%" align="left" id="tooltipCategory">Category</td>
                                <td width="30%" align="left" id="tooltipSubCategory">SubCategory</td>
                            </tr>


                            <tr>
                                <td align="left">
                                    <input class="easyui-validatebox Material" id="Material" required="required" data-options="validType:'length[0,100]'" />
                                </td>
                                <td align="left">
                                    <input class="easyui-validatebox Colour" id="Colour" required="required" data-options="validType:'length[0,100]'" />
                                </td>

                                <td align="left">
                                    <input id="Category" class="easyui-validatebox Category" name="Category" required="required" data-options="validType:'length[0,100]'" />
                                    <input id="CategoryID" value="0" name="CategoryID" type="hidden" />
                                </td>
                                <td>
                                    <input type="text" class="easyui-validatebox SubCategory" id="SubCategory" name="SubCategory" required="required" data-options="validType:'length[0,100]'" />
                                </td>
                            </tr>

                            <tr>
                                <td align="left">Product Description</td>
                                <td align="left">&nbsp;</td>
                                <td align="left">&nbsp;</td>
                                <td>Bullets / Detailed Specifications (max. 5)</td>
                            </tr>
                            <tr>
                                <td valign="top" align="left" colspan="3">
                                    <textarea class="ProductDesc" rows="5" cols="45" id="ProductDesc" name="textarea"
                                        data-options="required:true"></textarea>
                                </td>
                                <td valign="top">
                                    <textarea class="Specifications" rows="5" cols="45" id="Specifications" name="textarea"
                                        data-options="required:true"></textarea></td>
                            </tr>
                            <tr>
                                <td valign="top" align="left" colspan="3">Tags and Keywords (comma separated)</td>
                                <td valign="top" rowspan="1" align="left"><span>Visibility  <strong></strong></span><span style="float: right;">SKU_QTY</span></td>
                            </tr>
                            <tr>
                                <td valign="top" align="left" colspan="3">
                                    <input type="text" value="" class="keywordname" id="Keywords"></td>
                                <td>
                                    <span>
                                        <select id="opVisibiliy" style="width: 160px; height: 30px;">
                                            @foreach (KeyValuePair<string, Int32> kvp in Model.GetProductVisibility())
                                            {
                                                if (kvp.Value == Model.Visibility)
                                                {
                                                <option value="@kvp.Value" selected="selected">Status: @kvp.Key</option>
                                                }
                                                else
                                                {
                                                <option value="@kvp.Value">Status: @kvp.Key</option>
                                                }
                                            }
                                        </select>
                                    </span>

                                    <span>
                                        <input type="text" value="0" id="SKU_QTY">
                                    </span>
                                </td>
                            </tr>
                            <tr>
                                <td valign="top" align="left" colspan="5">url</td>

                            </tr>
                            <tr>
                                <td valign="top" align="left" colspan="5">
                                    <input type="text" value="" id="URL" class="URL"></td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="feildsarea">
                        <div>
                            <div style="float: right;">
                                <a id="aSKUAdd" class="buttonCMS greenCMS">Submit </a>
                                <a id="SKUConfirm" style="display: none;" class="buttonCMS grayCMS">Product Configuration </a>
                            </div>
                        </div>
                    </div>

                </form>



                <form id="HMCostingForm" style="display: none;">
                    <div class="feildsarea">
                        <p><strong>Costing</strong> for HM#Group</p>
                        <table width="100%" border="0" cellspacing="0">
                            <thead>
                                <tr>
                                    <td id="tooltipSalePrice">Sale Price</td>
                                    <td id="tooltipEstimateFreight_SKU">Estimate Freight</td>
                                    @if (Model.userInfo.IsChannelControl == false)
                                    {
                                        <td id="tooltipFirstCost">Landed Cost</td>@*
                                        <td id="tooltipLandedCost">Landed Cost</td>*@
                                       
                                    }
                                    <td>Retail Price</td>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <input type="text" value="$0.00" id="SalePrice" class="easyui-validatebox hmCost" required="required" disabled="disabled"></td>
                                    <td>
                                        <input type="text" value="$0.00" id="EstimateFreight_SKU" class="easyui-validatebox hmCost" required="required" disabled="disabled"></td>
                                    @if (Model.userInfo.IsChannelControl == false)
                                    {
                                        <td>
                                            <input type="text" value="$0.00" id="FirstCost" class="easyui-validatebox hmCost" required="required" disabled="disabled"></td>
                                    }
                                    <td>
                                        <input type="text" value="$0.00" id="RetailPrice" class="easyui-validatebox hmCost" required="required" disabled="disabled"></td>
                                </tr>
                                <tr>
                                    <td colspan="5" align="right">
                                        <div style="padding-top: 5px;">
                                            <span style="padding: 0 0 0 0;">
                                                <a class="buttonCMS greenCMS editCosting">Edit costing </a>
                                            </span>
                                            <span style="padding: 0 50px 0 0;">
                                                <a class="buttonCMS greenCMS submitCosting" style="3: none;">Submit </a>
                                            </span>
                                            <span style="padding: 0 0 0 0;">
                                                <a class="buttonCMS greenCMS cancelCosting" style="display: none;">cancel </a>
                                            </span>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </form>
            </div>

        </aside>
    </div>
    <input type="hidden" id="hiddenSKUID" value="0" />
</body>
</html>
